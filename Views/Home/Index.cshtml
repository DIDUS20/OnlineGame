@{
    ViewData["Title"] = "Home";
    @model List<ScoreModel>
    
}
<h2>Witaj w Potatotype</h2>

@if (!string.IsNullOrEmpty(ViewContext.HttpContext.Request.Query["session"]))
{
    <p>Wykryto aktywną sesję. Przejdź do gry lub wyloguj się.</p>

    <form method="get" asp-controller="Home" asp-action="Game" style="display:inline-block;margin-right:8px;">
        <button type="submit">Play Game</button>
    </form>

    <form method="get" asp-controller="Home" asp-action="Logout" style="display:inline-block;">
        <button type="submit">Logout</button>
    </form>
}
else
{
    <p>Nie jesteś zalogowany. Zaloguj się lub zarejestruj nowe konto.</p>

    <a class="btn" asp-controller="Home" asp-action="Login" style="margin-right:8px;">Login</a>
    <a class="btn" asp-controller="Home" asp-action="SignUp">Sign Up</a>
}

<!-- Instrukcje sterowania -->
<div class="card mb-3" style="max-width:680px;">
    <div class="card-header">Instrukcje sterowania</div>    
    <div class="card-body">
        <p>Podstawowe sterowanie gry:</p>
        <ul>
            <li><strong>Poruszanie:</strong> <code>W</code> / <code>A</code> / <code>S</code> / <code>D</code></li>
            <li><strong>Strzał:</strong> C </li>
            <li><strong>Obróć:</strong> mysz </li>
            <li><strong>Respawn:</strong> automatyczny po śmierci w innej lokalizacji</li>
        </ul>
        <p class="mb-0">Punkty są dodawane do bazy danych po śmierci gracza, 
            na tablicy znajdują się najlepsze wyniki graczy, 
            za każdą eliminacje gracz otrzymuje 10 pkt.
            Gracz może podnosić apteczki (zielone kwadraty)
            pojawiające się co jakiś czas w losowych miejscach,
            leczą one 20 hp.
        </p>
    </div>
</div>

<hr />

<h2>🏆 TOP 10 GRACZY</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Gracz</th>
            <th>Punkty</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@Model[i].Name</td>
                <td>@Model[i].Score</td>
            </tr>
        }
    </tbody>
</table>

